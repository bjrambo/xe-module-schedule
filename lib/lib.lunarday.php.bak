			}
		}


		$td1 = 1880 * 365 + (int)(1880/4) - (int)(1880/100) + (int)(1880/400) + 30;
		$k11 = $year - 1;

		$td2 = $k11 * 365 + (int)($k11/4) - (int)($k11/100) + (int)($k11/400);

		$data_lday_array[1] = ( $year % 400 == 0 || $year % 100 != 0 && $year % 4 == 0 ) ? 29 : 28;

