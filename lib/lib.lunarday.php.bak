	// 음->양 변환
	public static function transLunarToSolar($year, $month, $day)
	{
		$year = (int)$year;
		$month = (int)$month;
		$day = (int)$day;

		$data_base_array = explode('-', self::$data_base);
		$data_lday_array = explode('-', self::$data_lday);

		if ( $year <= 1881 || $year >= 2050 ) {
			$YunMonthFlag = 0;
			return false;
		}

		if ( $month > 12 ) {
			$YunMonthFlag = 0;
			return false;
		}

		$m1 = $year - 1881;
		if ( substr($data_base_array[$m1], 12, 1) == 0 )
		{
			$YunMonthFlag = 0;
		}
		else
		{
			$YunMonthFlag = ( substr($data_base_array[$m1], $month, 1) > 2 ) ? 1 : 0;
		}

		$m1 = -1;
		$td = 0;

		if ( $year > 1881 && $year < 2050 )
		{
			$m1 = $year - 1882;
			for ( $i = 0; $i <= $m1; $i++ )
			{
				for ( $j = 0; $j <= 12; $j++ )
				{
					$td = $td + (substr($data_base_array[$i], $j, 1));
				}
				$td = ( substr($data_base_array[$i], 12, 1) == 0 ) ? $td + 336 : $td + 362;
			}
		}
		else
		{
			$gf_lun2sol = 0;
		}

		$m1++;
		$n2 = $month - 1;
		$m2 = -1;

		while ( 1 )
		{
			$m2++;
			if ( substr($data_base_array[$m1], $m2, 1) > 2 )
			{
				$td = $td + 26 + (substr($data_base_array[$m1], $m2, 1));
				$n2++;
			}
			else
			{
				if ( $m2 == $n2 )
				{
					if ( $gf_yun )
					{
						$td = $td + 28 + (substr($data_base_array[$m1], $m2, 1));
					}
					break;
				}
				else
				{
					$td = $td + 28 + (substr($data_base_array[$m1], $m2, 1));
				}
			}
		}

		$td = $td + $day + 29;
		$m1 = 1880;

		while(1) {
			$m1++;
			$leap = ( $m1 % 400 == 0 || $m1 % 100 != 0 && $m1 % 4 == 0 ) ? 1 : 0;
			$m2 = ( $leap == 1 ) ? 366 : 365;
			if ( $td < $m2 )
			{
				break;
			}
			$td = $td - $m2;
		}

		$syear = $m1;
		$data_lday_array[1] = $m2 - 337;

		$m1 = 0;

		while ( 1 )
		{
			$m1++;
			if ( $td <= $data_lday_array[$m1-1] )
			{
				break;
			}
			$td = $td - $data_lday_array[$m1-1];
		}

		$smonth = $m1;
		$sday = $td;
		$y = $syear - 1;
		$td = intval($y*365) + intval($y/4) - intval($y/100) + intval($y/400);

		$leap = ( $syear % 400 == 0 || $syear % 100 != 0 && $syear % 4 == 0 ) ? 1 : 0;
		$data_lday_array[1] = ( $leap == 1 ) ? 29 : 28;

		for ( $i = 0; $i <= $smonth-2; $i++ )
		{
			$td = $td + $data_lday_array[$i];
		}
		$td = $td + $sday;
		$w = $td % 7;

		$gf_lun2sol = 1;

		$smonth = sprintf('%02d', $smonth);
		$sday = sprintf('%02d', $sday);

		return array($syear, $smonth, $sday);
	}

	// 양->음 변환
	public static function transSolarToLunar($year, $month, $day)
	{
		$year = (int)$year;
		$month = (int)$month;
		$day = (int)$day;

		$data_base_array = explode('-', self::$data_base);
		$data_lday_array = explode('-', self::$data_lday);

		$dt = $data_base_array;

		for ( $i = 0; $i <= 168; $i++ )
		{
			$dt[$i] = 0;
			for ( $j = 0; $j < 12; $j++ )
			{
				switch ( substr($data_base_array[$i], $j, 1) )
				{
					case 1:
						$dt[$i] += 29;
