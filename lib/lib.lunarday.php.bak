		}

		if ( $day > $data_lday_array[$month-1] )
		{
			$gf_sol2lun = 0;
		}

		for ( $i = 0; $i <= $month-2; $i++ )
		{
			$td2 += $data_lday_array[$i];
		}

		$td2 += $day;
		$td = $td2 - $td1 + 1;
